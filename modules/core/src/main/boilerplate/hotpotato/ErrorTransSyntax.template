    # ]

    def unifyError[UnifiedL](
      implicit errorTrans: ErrorTrans[F, L, R],
      unifier: Unifier.Aux[L, UnifiedL]
    ): F[UnifiedL, R] = {
      errorTrans.transformError(in) { err =>
        unifier(err)
      }
    }
  }

